<!DOCTYPE html>
<html>
<head></head>
<body>

  <% if session[:error] %>
    <div>
      <p><%= session.delete(:error) %></p>
    </div>
  <% end %>

  <% if session[:success] %>
    <div>
      <p><%= session.delete(:success) %></p>
    </div>
  <% end %>

  <ul>
    <% @files.each do |file| %>
      <li><a href="/<%= file %>"><%= file %></a></li>
    <% end %>
  </ul>
</body>